<div class='title'>Login</div>
<%= form_with(url: login_path) do |f| %>
  <%= f.label(:email) %><br>
  <%= f.email_field(:email) %><br>
  <%= f.label(:password) %><br>
  <%= f.password_field(:password) %>
  <%= f.submit('Log in', class: 'submit-button') %>
<% end %>

<div>New User? <%= link_to('Sign up now!', signup_path) %></div>
