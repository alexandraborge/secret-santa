<div class='login-page'>
  <div class='title'>Login</div>
  <% if flash[:errors].present? %>
      <div class='error-messages'><%= flash[:errors] %></div>
    <% end %>
  <%= form_with(url: login_path) do |f| %>
    <%= f.label(:email) %><br>
    <%= f.email_field(:email) %><br>
    <%= f.label(:password) %><br>
    <%= f.password_field(:password) %>
    <%= f.submit('Log in', class: 'submit-button') %>
  <% end %>

  <div>New User? <%= link_to('Sign up now!', signup_path) %></div>
</div>
